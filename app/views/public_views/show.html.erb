<% if @public_view.blank? %>
    <p>No information available</p>
<% else %>
    <h1>Public View of Credentials for <%= @public_view.owner.email %></h1>

    <% @credentials.each do |credential| %>
        <div class="credential">
            <% skill = credential.skill %>
            <%= render "logo", logo: skill.logo %>
            <div class="details">
                <%= render "skill_details", skill: skill %>
                <%= render "accepted_authentications", credential: credential %>
            </div>
        </div>
    <% end %>

<% end %>
